<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="api_token"
        android:title="@string/pref_title_api_token"
        android:defaultValue="@string/pref_default_api_token"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="api_url"
        android:title="@string/pref_title_api_url"
        android:defaultValue="@string/pref_default_api_url"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLines="1" />

    <Preference android:title="@string/pref_btn_title_test"
        android:key="test_settings"
        android:summary="@string/pref_btn_summary_test"/>

</PreferenceScreen>
